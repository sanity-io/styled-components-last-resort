{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>sanity-io/renovate-config"],
  "ignorePresets": [":ignoreModulesAndTests", "github>sanity-io/renovate-config:group-non-major"],
  "packageRules": [
    {
      "description": "Prevent updates to jest-dom utils due to https://github.com/vitest-dev/vitest/issues/7668",
      "matchPackageNames": ["@testing-library/jest-dom"],
      "enabled": false
    },
    {
      "matchFileNames": ["benchmarks/package.json"],
      "matchPackageNames": ["react", "react-dom", "react-is"],
      "followTag": "canary"
    }
  ]
}
